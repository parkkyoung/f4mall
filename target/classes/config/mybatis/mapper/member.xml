<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="">
	
	<!-- 전체목록 -->
	<select id="member_list" resultType="vo.MemberVo">
		select * from member
	</select>
	
	<!-- 아이디 체크 -->
	<select id="check_id"  parameterType="String" resultType="vo.MemberVo">
	    select * from member where m_id=#{ m_id }
	</select>
	

	<!-- 비밀번호 체크 -->
	<select id="check_pwd"  parameterType="String" resultType="vo.MemberVo">
	    select * from member where m_pwd=#{ m_pwd }
	</select>
	
	<!-- 회원가입 -->
	<insert id="insert_id" parameterType="vo.MemberVo">
		insert into member (m_id,m_pwd,m_name,m_ip,m_regdate,m_tel,m_zipcode,m_addr,m_addr_d,m_grade,m_nick,m_image_m) values(#{ m_id },
							#{m_pwd},#{m_name},#{m_ip},now(),#{m_tel},#{m_zipcode},#{m_addr},#{m_addr_d},#{m_grade},#{m_nick},#{m_image_m})
	</insert>
	
	
	<!-- 회원정보수정 -->
	<update id="member_update" parameterType="vo.MemberVo">
		update member set 
						  
						  m_ip		=#{ m_ip },
						  m_pwd	    =#{ m_pwd },
						  m_name	=#{ m_name },
						  m_nick	=#{ m_nick },
						  m_tel 	=#{ m_tel },
						  m_regdate =now(),
		                  m_addr	=#{ m_addr },
		                  m_addr_d  = #{ m_addr_d },
		                  m_zipcode =#{ m_zipcode }
		                  m_image   =#{ m_image }
		                  
		where m_id=#{ m_id }
	</update>
	
	<select id="mo_list" resultType="vo.DemandVo">
		select * from demand
	</select>

	
</mapper>












